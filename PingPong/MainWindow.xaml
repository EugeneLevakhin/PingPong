<Window x:Class="PingPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="PingPong" Height="510" Width="600" KeyDown="Window_KeyDown" ResizeMode="NoResize">
    <Grid>
        <Canvas Name="canvas" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseMove="canvas_MouseMove">
            <Canvas.Background>
                <ImageBrush ImageSource="/PingPong;component/Resources/backgroundField.png"></ImageBrush>
            </Canvas.Background>


            <Rectangle RadiusX="3" RadiusY="3" Name="racket" Canvas.Top="440" Fill="Red" Height="12" Width="100" Stroke="Black"/>
            <Ellipse Name="ball" Fill="Yellow" Height="16" Canvas.Left="196" Stroke="Red" Canvas.Top="229" Width="16"/>
        </Canvas>
    </Grid>
</Window>
